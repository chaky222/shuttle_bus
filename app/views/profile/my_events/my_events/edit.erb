<div class='row front_content_main_row profile_event_edit_main_row'>
  <div class="w500_centerd" id="content">
    <div class="row front_page_content_row">
      <div class="col-12">
        <% if @item.can_owner_edit_this_event? %>
          <div class="row">
            <div class="col-12">
              <a href="<%= @item.profile_event_images_list_url %>">Add/delete/edit event images</a>
            </div>
          </div>
          <%= form_for(@item, url: { action: :update }, html: { class: "row front_edit_form" }) do |f| %>
            <div class="col-12">
              <%= render "/layouts/my_error_messages_row", item: @item %>
              <div class="row">
                <div class="col-12">
                  <div class="field form-group">
                    <%= f.label :name %>
                    <em>(<%= Event.validators_on(:name)[0].options[:maximum] %> characters maximum)</em><br />
                    <%= f.text_field :name, class: "form-control form-control-sm" %>
                  </div>
                  <div class="field form-group">
                    <%= f.label :description %>
                    <em>(<%= Event.validators_on(:description)[0].options[:maximum] %> characters maximum)</em><br />
                    <%= f.text_area :description, class: "form-control form-control-sm" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :event_start_time %>
                    <div class="input-group">
                      <input value='<%= @item.event_start_time_with_default.client_to_time_picker_str %>' type="text" name="event_start_time" class='form-control form-control-sm date_time_picker' data-target='#event_start_time_picker' id='event_start_time_picker' data-toggle='datetimepicker'  />
                      <div class="input-group-append" data-target="#event_start_time_picker" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class='fa fa-calendar'></i></div>
                      </div>
                    </div>
                    <small class="form-text text-muted">Time when the event will be started.</small>
                  </div>
                  <div class="form-group">
                    <%= f.label :event_finish_time %>
                    <div class="input-group">
                      <input value='<%= @item.event_finish_time_with_default.client_to_time_picker_str %>' type="text" name="event_finish_time" class='form-control form-control-sm date_time_picker' data-target='#event_finish_time_picker' id='event_finish_time_picker' data-toggle='datetimepicker'  />
                      <div class="input-group-append" data-target="#event_finish_time_picker" data-toggle="datetimepicker">
                        <div class="input-group-text"><i class='fa fa-calendar'></i></div>
                      </div>
                    </div>
                    <small class="form-text text-muted">Time when the event will be finished.</small>
                  </div>
                  <br /><br />
                  <% if @item.visibility_status_unpublished? || (@item.visibility_status_changed? && @item.visibility_status_published?) %>
                    <div class="form-check">
                      <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name='run_publish_chk' value='1' <%= (@item.visibility_status_changed? && @item.visibility_status_published?) ? "checked='checked'" : '' %> />
                        Publish this event on save success
                      </label>
                    </div>
                  <% end %>
                  <div class="form-group">
                    <%= f.submit "Save", class: 'btn btn-primary' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          You can not edit this event.
        <% end %>
        <div class="row">
          <div class="col-12">
            <br /><br /><br /><br /><br /><br />
            <%= link_to "Back to the event page", profile_my_event_path(@item.id) %>
            <br/><br/><br/><br/><br/>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

