<div class='row front_content_main_row profile_event_edit_main_row'>
  <div class="w500_centerd" id="content">
    <div class="row front_page_content_row">
      <div class="col-12">
        <% if @item.can_owner_edit_this_event? %>
          <%= form_for(@item, url: { action: :create_image_attachment }, html: { method: :post, class: "row front_edit_form", multipart: true }) do |f| %>
            <div class="col-12">
              <div class="row">
                <div class="col-12">
                  <h4>Add new image:</h4>
                </div>
              </div>
              <%= render "/layouts/my_error_messages_row", item: @item %>
              <div class="row">
                <div class="col-9">
                  <div class="field form-group">
                    <%= f.label :new_image %>
                    <em>(image 4MB maximum)</em><br />
                    <input class='form-control' name="img_file" type="file"  />
                  </div>
                </div>
                <div class="col-3">
                  <div class="form-group">
                    <br />
                    <%= f.submit "Save", class: 'btn btn-sm btn-primary' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <div class="row">
            <div class="col-12">
              <br /><br /><br />
              <h5>Choose logo image:</h5>
            </div>
          </div>
          <%= form_for(@item, url: { action: :choose_image_as_logo }, html: { method: :post, class: 'row front_edit_form' }) do |f| %>
            <table class="table table-sm">
              <tbody>
                <% @item.valid_event_imgs.each_with_index do |img, indx| %>
                  <tr>
                    <td>
                      <%= f.radio_button :logo_img_index, indx %>
                    </td>
                    <td>
                      <img src='<%= img.image_sm_url %>' />
                      <%= link_to 'Big image', url_for(img.image_file), target: '_blank' %>
                    </td>
                    <td>
                      <%= f.submit "Choose logo", class: 'btn btn-sm btn-outline-danger', name: "delete_item_#{ indx }", value: 'Delete', onclick: "return confirm('Are you sure?');" %>
                    </td>
                  </tr>
                <% end %>
                <tr>
                  <td></td>
                  <td>
                    <%= f.submit "Choose logo", class: 'btn btn-sm btn-outline-success' %>
                  </td>
                </tr>
              </tbody>
            </table>
          <% end %>
        <% end %>
        <div class="row">
          <div class="col-12">
            <br /><br /><br /><br /><br /><br />
            <%= link_to "Back to the event page", profile_my_event_path(@item.id) %>
            <br/><br/><br/><br/><br/>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

