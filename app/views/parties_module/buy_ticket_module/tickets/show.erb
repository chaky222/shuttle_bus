<div class='row front_content_main_row profile_event_tpacks_main_row'>
  <div class="w350_centerd" id="content">
    <div class="row front_page_content_row">
      <div class="col-12">
        <div class="row hidden_in_modal">
          <div class="col-12">
            <h4>TicketBuyPage</h4>
            <small><%= @front_side_tickets_pack.name.to_s.ehtml %></small>
          </div>
        </div>
        <%= render "/layouts/my_error_messages_row", item: @card %>
        <form class="row front_edit_form" action="<%= party_tickets_path(@front_side_current_party.id) %>" method='POST'>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= hidden_field_tag :tpack_id, @front_side_tickets_pack.id %>
          <div class="col-12 payment_card_info_block">
            <div class="block-sm">
              <div class="row">
                <div class="col-12">
                  <div class="form-group has-danger f-has-feedback">
                    <label for="f-card_number" class="">Card number</label>
                    <input type="tel" id="f-card_number" data-vv-as="Card number" data-vv-name="f-card_number" maxlength="23" placeholder="XXXX XXXX XXXX XXXX" inputmode="numeric" class="form-control form-control-sm" name="card_number" value="<%= @card.number.to_s.ehtml %>" />
                    <span class="f-form-control-feedback f-icon f-i-card-empty"></span><span></span>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-6">
                  <div class="f-form-group has-danger">
                    <label for="f-expiry_date" class="">Expiry month/year</label>
                    <input type="tel" id="f-expiry_date" data-vv-as="Expiry date" data-vv-name="f-expiry_date" placeholder="MM/YY" inputmode="numeric" class="form-control form-control-sm" name="expiry_date" value='<%= @card.month.to_s.size_positive? && @card.year.to_s.size_positive? ? "#{ @card.month.to_s.rjust(2, '0') }/#{ @card.year.to_s[2, 3] }".ehtml : '' %>' />
                    <span></span>
                  </div>
                </div>
                <div class="col-6">
                  <div class="f-form-group has-danger f-has-feedback">
                    <label for="f-cvv2" class="">CVV2</label>
                    <input type="tel" id="f-cvv2" data-vv-as="CVV2" data-vv-name="f-cvv2" maxlength="3" placeholder="XXX" inputmode="numeric" class="form-control form-control-sm" name="cvv2" value="<%= @card.verification_value.to_s.ehtml %>" />
                    <span class="f-form-control-feedback f-icon f-i-question"></span><span></span><span></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 text-center">
            <br /><br />
            <button type="submit" class='btn btn-sm btn-success'>
              Pay&nbsp;&nbsp;&nbsp;<%= @front_side_tickets_pack.ticket_cost_eur.to_price_html("EUR") %>
            </button>
          </div>
        </form>
        <div class="row hidden_in_modal">
          <div class="col-12">
            <br /><br /><br /><br /><br /><br />
            <%= link_to "Back to the event ticket choose page", party_tickets_path(@front_side_current_party.id) %>
            <br/><br/><br/><br/><br/>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

