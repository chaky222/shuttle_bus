<div class='row front_content_main_row profile_event_tpacks_main_row'>
  <div class="w500_centerd" id="content">
    <div class="row front_page_content_row">
      <div class="col-12">
        <h4>TicketsPacks</h4>
        <% @front_side_current_party.event_ticket_packs.each do |tpack| %>
          <div class="row event_tpack_row">
            <div class="col-6">
              <div class="event_tpack_info_block">
                <span><%= tpack.name.to_s.ehtml %>(<%= tpack.event_ticket_pack_type.to_s.ehtml %>)</span>
                <small>Sold: <%= tpack.tickets_sold_cnt %>&nbsp;/&nbsp;<%= tpack.pack_capacity %></small>
              </div>
            </div>
            <div class="col-6">
              <a href="<%= new_profile_my_ticket_path() %>?tpack_id=<%= tpack.id %>" class='btn btn-sm btn-outline-success'>
                Buy ticket <%= tpack.ticket_cost_eur.to_price_html("EUR") %>
              </a>
            </div>
          </div>
        <% end %>
        <div class="row hidden_in_modal">
          <div class="col-12">
            <br /><br /><br /><br /><br /><br />
            <%= link_to "Back to the event page", party_path(@front_side_current_party.id) %>
            <br/><br/><br/><br/><br/>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

